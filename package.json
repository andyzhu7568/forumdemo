{
  "name": "forumdemo",
  "version": "1.0.0",
  "description": "简单留言板/论坛（基础版）",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && npm run build:client",
    "build:client": "tsc -p tsconfig.client.json",
    "start": "node dist/index.js",
    "dev": "npm run build:client && ts-node src/index.ts",
    "dev:watch": "ts-node-dev --respawn src/index.ts"
  },
  "keywords": [
    "forum",
    "message-board",
    "express",
    "mongodb"
  ],
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mongodb": "^7.1.0",
    "mongoose": "^8.0.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
